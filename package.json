{
  "name": "webpack-base-template",
  "description": "Personal Webpack Config",
  "version": "0.1.0",
  "main": "webpack.config.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --config webpack.config.mjs --mode production --devtool false",
    "dev": "webpack --config webpack.config.mjs --mode development --devtool source-map --watch",
    "start": "npm run dev",
    "prettier-format": "prettier --config .prettierrc \"./src\" \"./types\" --write",
    "prettier-format:md": "prettier --config .prettierrc \"./*.js\" --write",
    "eslint": "eslint ./src/**/*.ts",
    "eslint:fix": "eslint ./src/**/*.ts --fix",
    "stylelint": "stylelint -c ./.stylelintrc src/**/*.scss",
    "stylelint:fix": "stylelint -c ./.stylelintrc src/**/*.scss --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jxmked/webpack-base-template.git"
  },
  "keywords": [
    "webpack",
    "template",
    "typescript",
    "sass"
  ],
  "author": "Jovan De Guia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jxmked/webpack-base-template/issues"
  },
  "homepage": "https://jxmked.github.io/webpack-base-template/",
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.3.7",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "assets-webpack-plugin": "^7.1.1",
    "browser-sync": "^2.27.12",
    "browser-sync-webpack-plugin": "^2.3.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.34.0",
    "file-loader": "^6.2.0",
    "ga4-webpack-plugin": "^1.0.1",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "interpolate-html-plugin": "^4.0.0",
    "mini-css-extract-plugin": "^2.7.2",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.8.8",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.1",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-scss": "^5.2.1",
    "ts-loader": "^9.4.2",
    "typescript": "^5.2.2",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.1",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-nano": "^1.1.1",
    "webpack-pwa-manifest": "^4.3.0"
  }
}
